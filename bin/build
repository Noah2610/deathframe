#!/bin/bash

ROOT="$( cd $(dirname $0)/..; pwd )"
cmd="build"
[ -n "$1" ] && cmd="$1"

function err {
  (1>&2 echo -e "ERROR: $1\nExiting.")
  exit 1
}

function check {
  which "$1" &> /dev/null || err "'$1' is not available."
}

check "cargo" && \
  cargo +nightly-2019-03-01 $cmd --features amethyst/nightly
